<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieBookingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.MovieBookingApp.TransparentStatusBarWithAppBar" parent="Theme.MovieBookingApp">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MovieBookingApp.TransparentStatusBar" parent="Theme.MovieBookingApp">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MovieBookingApp.GreyTransparentStatusBar" parent="Theme.MovieBookingApp">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/md_grey_200</item>
    </style>

</resources>